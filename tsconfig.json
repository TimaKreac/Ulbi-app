{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS", 
      "paths": {
        "react": [ "./node_modules/@types/react" ]
      }
    }
  }
}
